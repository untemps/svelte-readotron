{
	"name": "@untemps/svelte-readotron",
	"version": "1.5.2",
	"author": "Vincent Le Badezet <v.lebadezet@untemps.net>",
	"homepage": "https://svelte-readotron.vercel.app",
	"repository": "git@github.com:untemps/svelte-readotron.git",
	"bugs": "https://github.com/untemps/svelte-readotron/issues",
	"license": "MIT",
	"description": "Svelte component to display an estimated reading time",
	"keywords": [
		"read-o-meter",
		"speed-reading-time",
		"reading-time",
		"reading-time-estimator",
		"reading-rates",
		"svelte",
		"svelte-component",
		"component",
		"javascript"
	],
	"private": false,
	"publishConfig": {
		"access": "public"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"files": [
		"dist",
		"!dist/**/*.test.*"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"engines": {
		"node": ">=18"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.7.2",
		"@commitlint/config-conventional": "^17.7.0",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^9.2.1",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/kit": "^1.20.4",
		"@sveltejs/package": "^2.0.0",
		"@testing-library/jest-dom": "^6.1.3",
		"@testing-library/svelte": "^4.0.3",
		"@vitest/coverage-v8": "^0.34.6",
		"cross-env": "^7.0.3",
		"husky": "^8.0.3",
		"jsdom": "^22.1.0",
		"prettier": "^3.0.3",
		"prettier-plugin-svelte": "^3.0.3",
		"publint": "^0.1.9",
		"semantic-release": "^22.0.5",
		"svelte": "^4.0.5",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.4.2",
		"vitest": "^0.34.0"
	},
	"dependencies": {
		"@untemps/read-per-minute": "^2.0.1",
		"@untemps/svelte-use-drop-outside": "^1.6.0",
		"@untemps/svelte-use-tooltip": "^2.8.0",
		"@untemps/utils": "^3.0.0"
	},
	"peerDependencies": {
		"svelte": "^4.0.0"
	},
	"release": {
		"branches": [
			"main",
			{
				"name": "beta",
				"prerelease": true
			}
		],
		"plugins": [
			[
				"@semantic-release/commit-analyzer",
				{
					"releaseRules": [
						{
							"scope": "force",
							"release": "patch"
						}
					]
				}
			],
			"@semantic-release/release-notes-generator",
			"@semantic-release/changelog",
			"@semantic-release/npm",
			"@semantic-release/git",
			[
				"@semantic-release/github",
				{
					"assets": [
						{
							"path": "dist/index.js"
						}
					]
				}
			]
		]
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && yarn package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "yarn package",
		"test": "vitest watch --coverage",
		"test:ci": "vitest run --coverage",
		"lint": "prettier --check .",
		"format": "prettier --write .",
		"prepare": "husky install"
	}
}
